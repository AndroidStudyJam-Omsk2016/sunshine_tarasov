<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/location_default"
        android:inputType="text"
        android:key="@string/location_key"
        android:singleLine="true"
        android:title="@string/location_label" />

    <ListPreference
        android:key="@string/temperature_key"
        android:entries="@array/unit"
        android:defaultValue="@string/metric_value"
        android:entryValues="@array/value"
        android:title="@string/temperature_lable"/>
</PreferenceScreen>